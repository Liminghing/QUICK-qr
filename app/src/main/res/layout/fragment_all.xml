<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fViewModel"
            type="com.jkweyu.quickqr.viewmodel.favorites.FavoritesRVItemViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:autoSizeTextType="uniform"
            android:text="전체"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/all_fragment_recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:background="#F7F7F8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/white"
                    android:text="QR 명함"
                    android:textStyle="bold" />
                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_qr_card_history"
                    app:title="QR명함 제작 기록"
                    app:count="과거 제작했던 QR명함 기록"/>

                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_qr_card_favorite"
                    app:title="QR명함 즐겨찾기"
                    app:count="QR명함 즐겨찾기 기록"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/white"
                    android:text="QR 상품"
                    android:textStyle="bold" />
                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_qr_item_history"
                    app:title="QR페이지 제작 기록"
                    app:count="과거 제작했던 QR페이지 기록"/>
                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_qr_item_favorite"
                    app:title="QR페이지 즐겨찾기"
                    app:count="QR페이지 즐겨찾기 기록"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/white"
                    android:text="일반 QR"
                    android:textStyle="bold" />
                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_qr_general_history"
                    app:title="일반QR 제작 기록"
                    app:count="과거 제작했던 일반QR 기록"/>
                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_qr_general_favorite"
                    app:title="일반QR 즐겨찾기"
                    app:count="일반QR 즐겨찾기 기록"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/white"
                    android:text="결제 관리"
                    android:textStyle="bold" />
                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_payment_history"
                    app:title="QR 결제 내역"
                    app:count="QR결제 내역 조회"/>
                <com.jkweyu.quickqr.view.all.customview.AllFragmentItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_all_fragment_payment_management"
                    app:title="QR 결제 수단"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>


            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>