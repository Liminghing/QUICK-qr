<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickQRApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:ambientShadowAlpha">0.04</item>
        <item name="android:spotShadowAlpha">0.04</item>

        <item name="android:navigationBarColor">@color/Container_color</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">
            true
        </item>

        <!-- 툴바 스타일 적용 -->
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>

        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>

        <!-- 스플래시 -->




    </style>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.Material.ActionButton.Overflow">
        <!-- 아이콘 색상 변경 -->
        <item name="android:tint">@color/white</item>
    </style>


    <style name="Theme.QuickQRApp" parent="Base.Theme.QuickQRApp" >
        <item name="android:windowSplashScreenBackground" tools:targetApi="S">@color/base_color</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@drawable/ic_splash_icon</item>
<!--        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="S">@color/color</item>-->
<!--        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="S">duration_int</item>-->
<!--        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="S">@drawable/ic_app_title</item>-->
    </style>



    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabSelectedTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
    </style>
</resources>